import sys
import requests
import argparse

parser = argparse.ArgumentParser(
    description='host selection',
)

parser.add_argument('-c', action="store", dest="collection")
parser.add_argument('-i', action="store", dest="_id")
parser.add_argument('-r', action="store", dest="r")
parser.parse_args()

if not r:
	host="http://127.0.0.1:5000"

	

inputData={'_id':sys.argv[2]}
Url = "/quiz/collection=" + sys.argv[1]  

myUrl = host + Url

print 

resp = requests.get(myUrl,params=inputData)
if resp.status_code != 200:
    	# This means something went wrong.
    	print ('GET ' + Url + ' {}'.format(resp.status_code))
else:
	print (resp.json())
	print ('status code:', resp.status_code)
	
